    "version": "0.2.0",
    "configurations": [
        {
            "name": "Unit Tests",
            "type": "python",
            "request": "launch",
            "module": "unittest",
            "args": ["tests"],
            "envFile": "${workspaceFolder}/dev.env"
        },
        {
            "name": "Docker: Python - Flask",
            "type": "docker",
            "request": "launch",
            "preLaunchTask": "docker-run: debug",
            "python": {
                "pathMappings": [
                    {
                        "localRoot": "${workspaceFolder}",
                        "remoteRoot": "/app"
                    }
                ],
                "projectType": "flask",
            }
        }
    ]
}